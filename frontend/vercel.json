{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "yarn install",
        "buildCommand": "yarn build",
        "outputDirectory": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://<your-firebase-function-url>.cloudfunctions.net/api/(.*)"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
